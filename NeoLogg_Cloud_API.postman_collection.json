			"item": [
				{
					"name": "Login - SuperAdmin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('access_token', jsonData.data.accessToken);",
									"    pm.collectionVariables.set('refresh_token', jsonData.data.refreshToken);",
									"    console.log('Tokens guardados correctamente');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"superadmin@neologg.com\",\n  \"password\": \"SuperAdmin123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/unprotected/auth/login",
							"host": ["{{base_url}}"],
							"path": ["unprotected", "auth", "login"]
						},
						"description": "Login con el usuario superadmin"
					},
					"response": []
				},
