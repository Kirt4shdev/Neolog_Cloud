# ============================================
# API Configuration
# ============================================
API_PORT=3000
API_JWT_SECRET_TOKEN=your-super-secret-jwt-token-change-this-in-production
API_ALLOWED_CORS_ORIGINS=http://localhost:5173

# ============================================
# PostgreSQL Database (Docker)
# ============================================
# Connection string para PostgreSQL en Docker
POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5433/dilus_db

# ============================================
# Valkey (Redis fork) - Docker
# ============================================
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=valkey_password

# ============================================
# SMTP Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM_ADDRESS=noreply@yourdomain.com
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# Crypto Tool (Encryption)
# ============================================
CRYPTO_TOOL_PASSWORD=your-crypto-password-change-this
CRYPTO_TOOL_ALGORITHM=aes-256-cbc

# ============================================
# Development Settings
# ============================================
SHOW_DEV_LOGS=true # Boolean
EXECUTE_MODE=dev # "dev" or "production"

# ============================================
# Admin Authorization
# ============================================
ADMIN_AUTHORIZATION_HEADER=your-admin-secret-header
