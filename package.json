    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "debug": "4.4.0",
    "dotenv": "16.3.1",
    "env-var": "7.4.1",
    "express": "5.0.0",
    "geoip-lite": "1.4.10",
    "helmet": "8.1.0",
    "hpp": "0.2.3",
